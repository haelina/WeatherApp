<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp">
                <!--android:background="@drawable/shape"-->

            <!--<TextView
                android:text="Search for weather by city name"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />-->
            <EditText
                android:id="@+id/searchValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter city or location name"
                android:layout_toLeftOf="@+id/searchButton"/>
            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_alignParentRight="true"
                android:onClick="clickedSearch"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:text="Search with current location"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/latitude"
                    android:text="Latitude: 0.0"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/longitude"
                    android:text="Longitude: 0.0"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/getCoordinatesButton"
                    android:text="Get coordinates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="getCoordinates"/>
                <Button
                    android:id="@+id/searchWithCoordinates"
                    android:text="Search weather"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clickSearchCoordinates"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/weatherData"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape">
            <TextView
                android:id="@+id/locationName"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cityname, countrycode"
                android:textAlignment="center" />
                <TextView
                    android:id="@+id/latValue"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="latitude: 60"
                    android:textSize="12dp"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/lonValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="longitude: 45"
                    android:textSize="12dp"
                    android:textAlignment="center"/>
                <ImageView
                    android:id="@+id/weatherIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description here"
                    android:textSize="24dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/tempValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26 \u2103"
                    android:textSize="46dp"
                    android:textColor="#0A01FF"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_marginBottom="20dp"
                    android:id="@+id/feelsLike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feels like: 26 \u2103"
                    android:textSize="18dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/minMaxTemp"
                    android:text="min: 10 \u2103 \t\t\tmax: 30 \u2103"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/notFound"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape">
                <TextView
                    android:id="@+id/notFoundText"
                    android:textSize="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No results found.\nTry again!"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
